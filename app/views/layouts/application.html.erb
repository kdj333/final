<!DOCTYPE html>
<html>
  <head>
    <title>Golf Lessons</title>

    <%= stylesheet_link_tag    "http://netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" %>

    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>

    <%= csrf_meta_tags %>
  </head>
  <body>

    <div class="container">
      <div class="header">
        <div class="row">
          <div class="col-md-12">
            <h1>Free Golf Lessons</h1>
          </div>
        </div>

        <div class="row">
          <div class="col-md-8">
            <u><%= link_to "Home", "/videos", "class" => "item-link"  %></u>
          </div>
          <div class="pull-right">
            <% user = User.find_by("id" => cookies["user_id"]) %>
            <% if user.present? %>
              <b><%= user["name"] %>:</b>
              <%= link_to "My Profile", "/users/#{user["id"]}" %> |
              <%= link_to "Sign Out", '/logout' %>
            <% else %>
              <u><%= link_to "Sign Up", '/users/new' %></u> |
              <u><%= link_to "Sign In", '/login' %></u>
            <% end %>
          </div>
        </div>
        <hr>
        <h4 class="text-warning"><%= notice %></h4>
      </div>

      <%= yield %>

    <div>

  </body>
</html>
